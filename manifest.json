{
  "manifest_version": 3,
  "name": "MB Tracker Extension",
  "version": "1.0.0",
  "description": "Enhances mb calendar with task completion tracking",

  "permissions": ["activeTab", "storage"],

  "host_permissions": ["https://*.managebac.com/*"],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.managebac.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
